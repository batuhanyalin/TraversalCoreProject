@model AppRole
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Areas/Admin/Views/Shared/_UIAdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Anasayfa /</span> Yöneticiler</h4>
    <div class="card">
        <h5 class="card-header">Yönetici Listesi</h5>
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="mb-3">
                        <form method="post">
                            @Html.DropDownListFor(x => x.Id, (List<SelectListItem>)ViewBag.userRole, new { @class = "form-control" })
                            <button class="btn btn-outline-primary">Kullanıcı Rolünü Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



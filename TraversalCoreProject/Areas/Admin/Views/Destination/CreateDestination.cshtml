@model DestinationCreateDto
@{
    ViewData["Title"] = "CreateDestination";
    Layout = "~/Areas/Admin/Views/Shared/_UIAdminLayout.cshtml";
}

<form method="post" enctype="multipart/form-data">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"><a href="/Admin/Destination/Index">Turlar</a> /</span> Tur Oluştur</h4>
        <div class="row">
            <h5 class="card-header">Tur Bilgileri </h5>
            <!-- Form controls -->
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">Kıta</label>
                            @Html.DropDownList("DrpCont", ViewBag.continent as List<SelectListItem>, "--Kıta Seçin---", new { @class = "form-control", id = "continentDropdown" })
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Ülke</label>
                            <select id="countryDropdown" class="form-control">
                                <option>--Ülke Seçin--</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Şehir</label>
                            <select id="cityDropdown" name="CityId" asp-for="CityId" class="form-control">
                                <option>--Şehir Seçin--</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Gün</label>
                            <input type="text" class="form-control" asp-for="DayNight" />
                            <span style="color:darkred;font-size:smaller" asp-validation-for="DayNight"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">Tarih</label>
                            <input type="date" class="form-control" asp-for="StartDate" />
                            <span style="color:darkred;font-size:smaller" asp-validation-for="StartDate"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Öne Çıkarıldı </label>
                            <input asp-for="IsFeaturePost" type="checkbox" class="form-check-input" />
                            <input type="hidden" asp-for="IsFeaturePost" value="false" />

                            <label class="form-label">Durum </label>
                            <input asp-for="Status" type="checkbox" class="form-check-input" />
                            <input type="hidden" asp-for="Status" value="false" />
                        </div>
                        <div class="row mb-3">
                            <div class="col">
                                <label class="form-label">Kapasite</label>
                                <input type="number" class="form-control" asp-for="Capacity" />
                                <span style="color:darkred;font-size:smaller" asp-validation-for="Capacity"></span>
                            </div>
                            <div class="col">
                                <label class="form-label">Fiyat</label>
                                <input type="text" class="form-control" asp-for="Price" />
                                <span style="color:darkred;font-size:smaller" asp-validation-for="Price"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Detaylar</label>
                            <textarea class="form-control" asp-for="Detail"></textarea>
                            <span style="color:darkred;font-size:smaller" asp-validation-for="Detail"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col">
                                <label class="form-label">Güncel Resim</label>
                                <br />
                            </div>
                            <div class="col">
                                <label class="form-label">Güncel Kapak Görseli</label>
                                <br />
                            </div>
                        </div>
                        <hr />
                        <div class="row mb-3">
                            <div class="col">

                                <label for="upload" class="btn btn-primary me-2 mb-4" tabindex="0">
                                    <span class="d-none d-sm-block">Fotoğraf Yükle</span>
                                    <i class="bx bx-upload d-block d-sm-none"></i>
                                    <input type="file" name="ImageUpload" id="upload" class="account-file-input" hidden accept="image/png, image/jpeg" />
                                </label>

                            </div>
                            <div class="col">

                                <label for="upload2" class="btn btn-primary me-2 mb-4" tabindex="0">
                                    <span class="d-none d-sm-block">Kapak Yükle</span>
                                    <i class="bx bx-upload d-block d-sm-none"></i>
                                    <input type="file" name="CoverImageUpload" id="upload2" class="account-file-input" hidden accept="image/png, image/jpeg" />
                                </label>

                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="form-label">Açıklama</label>
                            <textarea style="height:130px" class="form-control" asp-for="Description"></textarea>
                            <span style="color:darkred;font-size:smaller" asp-validation-for="Description"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5>Tur Rehberleri</h5>
                        <div class="row">

                            @for (int i = 0; i < Model.GuideMatchList.Count; i++)
                            {
                                <div class="col col-md-1">
                                    <div class="form-check">
                                        <input type="hidden" name="GuideMatchList[@i].DestinationId" value="@Model.GuideMatchList[i].DestinationId" />
                                        <input type="hidden" name="GuideMatchList[@i].GuideId" value="@Model.GuideMatchList[i].GuideId" />
                                        <a href="/Admin/Guide/UpdateGuide/@Model.GuideMatchList[i].GuideId">
                                            <img height="70px" width="60px" src="@Model.GuideMatchList[i].GuideImageUrl" />
                                        </a>
                                        <input type="checkbox" name="GuideMatchList[@i].GuideExist" class="form-check-input" value="true" @(Model.GuideMatchList[i].GuideExist ? "checked" : "") />
                                        <label class="form-check-label">@Model.GuideMatchList[i].GuideName</label>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5>Etiketler</h5>
                        <div class="row">
                            @for (int x = 0; x < Model.TagMatchList.Count; x++)
                            {
                                <div class="col col-md-1">
                                    <div class="form-check">
                                        <input type="hidden" name="TagMatchList[@x].DestinationId" value="@Model.TagMatchList[x].DestinationId" />
                                        <input type="hidden" name="TagMatchList[@x].TagId" value="@Model.TagMatchList[x].TagId" />
                                        <input type="checkbox" name="TagMatchList[@x].TagExist" class="form-check-input" value="true" @(Model.TagMatchList[x].TagExist ? "checked" : "") />
                                        <label class="form-check-label">@Model.TagMatchList[x].TagName</label>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">İçerik</label>
                            <textarea asp-for=Text1 class="form-control" id="summernote" rows="3"></textarea>
                            <span style="color:darkred;font-size:smaller" asp-validation-for="Text1"></span>
                        </div>
                    </div>
                </div>
                <hr />
                <button class="btn btn-success">Turu Oluştur</button>
            </div>
        </div>
    </div>
</form>

<script>
    $(document).ready(function () {
        // Kıta seçildiğinde ülke dropdown'unu doldur
        $('#continentDropdown').change(function () {
            var selectedContinentId = $(this).val(); // Seçilen kıtanın ID'sini al
            $.ajax({
                url: '@Url.Action("GetCountriesByContinent", "Destination")',
                type: 'GET',
                data: { continentId: selectedContinentId },
                success: function (data) {
                    var countryDropdown = $('#countryDropdown');
                    countryDropdown.empty();
                    countryDropdown.append('<option value="">--Ülke Seçin--</option>');
                    $.each(data, function (index, item) {
                        countryDropdown.append('<option value="' + item.value + '">' + item.text + '</option>');
                    });
                }
            });
        });

        // Ülke seçildiğinde şehir dropdown'unu doldur
        $('#countryDropdown').change(function () {
            var selectedCountryId = $(this).val(); // Seçilen ülkenin ID'sini al
            $.ajax({
                url: '@Url.Action("GetCitiesByCountry", "Destination")',
                type: 'GET',
                data: { countryId: selectedCountryId },
                success: function (data) {
                    var cityDropdown = $('#cityDropdown');
                    cityDropdown.empty();
                    cityDropdown.append('<option value="">--Şehir Seçin--</option>');
                    $.each(data, function (index, item) {
                        cityDropdown.append('<option value="' + item.value + '">' + item.text + '</option>');
                    });
                }
            });
        });
    });
</script>
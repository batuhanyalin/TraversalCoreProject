@model CommentListDto
@{
    ViewData["Title"] = "ReadComment";
    Layout = "~/Areas/Admin/Views/Shared/_UIAdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"><a href="/Admin/Comment/Index">Yorumlar</a> /</span> Yorum Okuma</h4>
    <div class="row">
        <h5 class="card-header">Yorum Bilgileri </h5>
        <!-- Form controls -->
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <input type="hidden" asp-for="CommentId" />
                    <div class="row mb-3">
                        <div class="col col-md-5">
                            <img src="@Model.Member.ImageUrl" style="height:200px;width:auto;border-radius:10%;" />
                        </div>
                        <div class="col col-md-7">
                            <div class="mb-1">
                                <label class="form-label">Yorum Yapan</label>
                                <input type="text" readonly id="ReceiverName" class="form-control" value="@Model.Member.Name @Model.Member.Surname" />
                            </div>
                            <div class="mb-1">
                                <label class="form-label">Tur</label>
                                <input type="text" readonly id="ReceiverMail" class="form-control" value="@Model.Destination.City.Country.Continent.ContinentName | - @Model.Destination.City.Country.CountryName - @Model.Destination.City.CityName" />

                            </div>
                            <div class="mb-1">
                                <label class="form-label">Tarih</label>
                                <input type="text" readonly id="Subject" class="form-control" value="@Model.CommentDate.ToString("dd.MM.yyy HH:ss")" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Yorum İçeriği</label>
                        <textarea style="height:190px" readonly class="form-control" asp-for="Text"></textarea>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="mb-3">
            <a href="/Admin/Comment/Index" class="btn btn-primary">Geri Dön</a>
        </div>
    </div>
</div>

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model List<GuideListDto>
<div class="col-12 col-xl-4">
    <div class="card h-100">
        <div class="card-header pb-0 p-3">
            <h6 class="mb-0">@localizer["Tur Rehberleri"]</h6>
        </div>
        <div class="card-body p-3">
            <ul class="list-group">
                @foreach (var item in Model)
                {
                    <li class="list-group-item border-0 d-flex align-items-center px-0 mb-2">
                        <div class="avatar me-3">
                            <img style="height:60px;width:50px;" src="@item.ImageUrl" alt="kal" class="border-radius-lg shadow">
                        </div>
                        <div class="d-flex align-items-start flex-column justify-content-center">
                            <h6 class="mb-0 text-sm">@item.Name @item.Surname</h6>
                            <p class="mb-0 text-xs">@item.Profession | @localizer["Dil Bilgisi"]: @item.OtherLanguage</p>
                        </div>
                        <a class="btn btn-link pe-3 ps-0 mb-0 ms-auto" href="/Guide/GuideDetail/@item.Id">@localizer["Detay"]</a>
                    </li>
                }

            </ul>
        </div>
    </div>
</div>
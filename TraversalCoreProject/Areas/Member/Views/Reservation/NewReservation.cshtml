@model AdminNewReservationDto
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    ViewData["Title"] = "NewReservation";
    Layout = "~/Areas/Member/Views/Shared/_UIMemberLayout.cshtml";
}

<div class="modal fade" id="modalNewReservationInfo" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div style="background-color:gold;color:white" class="modal-content">
            <div class="modal-header">
                <i style="font-size:xxx-large" class="far fa-question-circle"></i> <h1 class="modal-title">@localizer["Bilgi"]</h1>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div>
                        <span style="color:dimgray;font-weight:bold">@localizer["Rezervasyonunuz başlangıçta onay bekliyor şeklinde alınacaktır. Rezervasyon onaylanma süreci için güncel rezervasyonlarım menüsünü takip etmeyi unutmayın."]</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-12 mt-4">
            <div class="card">
                <div class="card-header pb-0 px-3">
                    <h4 class="mb-0">@localizer["Rezervasyon Oluştur"]</h4>
                </div>
                <div class="card-body pt-4 p-3">
                    <div class="form-group">
                        <div class="col">
                            <label class="form-text">@localizer["Tur Seçin"]</label>
                            @Html.DropDownListFor(x => x.DestinationId, (List<SelectListItem>)ViewBag.destinationList, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col">
                            <label class="form-text">@localizer["Kişi Sayısı"]</label>
                            <input class="form-control" type="number" asp-for="PersonCount" />
                            <span style="color:darkred;font-size:smaller" asp-validation-for="PersonCount"></span>
                            <span style="color:darkred;font-size:smaller" asp-validation-for="validationCode"></span>
                        </div>
                        <div class="col">
                            <label class="form-text">@localizer["Açıklama"]</label>
                            <textarea class="form-control" type="text" asp-for="Description"></textarea>
                            <span style="color:darkred;font-size:smaller" asp-validation-for="Description"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success">@localizer["Rezervasyon Yap"]</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<script>
    $(document).ready(function () {
        $('#modalNewReservationInfo').modal('show');
    });
</script>
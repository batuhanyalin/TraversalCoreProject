@model RegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Traversal - Yeni Üyelik Oluştur</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- LINEARICONS -->
	<link rel="stylesheet" href="~/colorlib-regform-26/fonts/linearicons/style.css">
	<script src="https://kit.fontawesome.com/a5532d615c.js" crossorigin="anonymous"></script>
	<!-- STYLE CSS -->
	<link rel="stylesheet" href="~/colorlib-regform-26/css/style.css">
</head>

<body>

	<div class="wrapper">
		<div class="inner">
			<img src="~/colorlib-regform-26/images/image-1.png" alt="" class="image-1">
			<form method="post">
				<h3>Yeni Hesap Oluştur</h3>
				<div class="form-holder">
					<span class="fas fa-user"></span>
					<input type="text" class="form-control" asp-for="Name" placeholder="Adınız" required="">
				</div>
				<div class="form-holder">
					<span class="fas fa-signature"></span>
					<input type="text" class="form-control" asp-for="Surname" placeholder="Soyadınız" required="">
				</div>
				<div class="form-holder">
					<span class="fas fa-birthday-cake"></span>
					<input type="date" class="form-control" asp-for="Birtday" placeholder="Doğum Tarihi" required="">
				</div>
				<div class="form-holder">
					<span class="fas fa-phone"></span>
					<input type="text" class="form-control" asp-for="Phone" placeholder="Telefon" required="">
				</div>
				<div class="form-holder">
					<span class="fas fa-envelope"></span>
					<input type="text" class="form-control" asp-for="Email" placeholder="E-posta" required="">
				</div>
				<div class="form-holder">
					<span class="fas fa-key"></span>
					<input type="password" class="form-control" asp-for="Password" placeholder="Parolanız" required="">
				</div>
				<div asp-validation-summary=ModelOnly class="form-holder">
					<span class="fas fa-lock"></span>
					<input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Parolanızı Onaylayın" required="">
				</div>
				<button>
					<span>Hesap Oluştur</span>
				</button>
				<br />
				<div class="text-center">
					<a class="txt2" href="/Login/Index">
						Zaten bir hesabınız var mı? Giriş Yapın
						<i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
					</a>
				</div>
			</form>
			<img src="~/colorlib-regform-26/images/image-2.png" alt="" class="image-2">
		</div>

	</div>

	<script src="~/colorlib-regform-26/js/jquery-3.3.1.min.js"></script>
	<script src="~/colorlib-regform-26/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>
@model DestinationListDto
@{
    ViewData["Title"] = "DestinationDetail";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container">
            <h2 class="title">Tur Detayları</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="/Default/Index">Anasayfa</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Tur Detay </li>
            </ul>
        </div>
    </div>
</section>
<div class="py-5 w3l-homeblock1 text-center">
    <div class="container mt-md-3">
        <h3 class="blog-desc-big text-center mb-4">
            Your Blog Posts are Boring? Here are 9 Tips for
            Making your Writing more Interesting
        </h3>
        <div class="blog-post-align">
            <div class="blog-post-img">
                <a href="#"><img src="~/Traversal/assets/images/c1.jpg" alt="" class="rounded-circle img-fluid" /></a>
            </div>
            <div class="blog-post-info">
                <div class="author align-items-center mb-1">
                    <a href="#">Johnson smith</a> in <a href="#url">Traversal</a>
                </div>
                <ul class="blog-meta">
                    <li class="meta-item blog-lesson">
                        <span class="meta-value"> June 13, 2020 </span>
                    </li>
                    <li class="meta-item blog-students">
                        <span class="meta-value"> 6min read</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<section class="blog-post-main w3l-homeblock1">
    <!--/blog-post-->
    <div class="blog-content-inf pb-5">
        <div class="container pb-lg-4">
            <div class="single-post-image">
                <div class="post-content">
                    <img src="~/Traversal/assets/images/banner2.jpg" class="radius-image img-fluid mb-5" alt="" />
                </div>
            </div>
            <div class="single-post-content">
                <div id="summernoteRead" class="alphabet mb-4">@Model.Text1</div>
                <blockquote class="blockquote my-5">
                    <div class="icon-quote"><span class="fa fa-quote-left" aria-hidden="true"></span></div>
                    "Dünyayı dolaşın. Görebileceğiniz bütün rüyaların en muhteşemi!"
                    <footer class="blockquote-footer mt-3">
                        Ray Bradbury
                    </footer>
                </blockquote>

                <div class="d-grid left-right mt-5 pb-md-5">
                    @await Component.InvokeAsync("_DestinationDetailTagsComponentPartial")
                    <div class="buttons-singles">
                        <h4>Share :</h4>
                        <a href="#blog-share"><span class="fa fa-facebook" aria-hidden="true"></span></a>
                        <a href="#blog-share"><span class="fa fa-twitter" aria-hidden="true"></span></a>
                        <a href="#blog-share"><span class="fa fa-google-plus" aria-hidden="true"></span></a>
                        <a href="#blog-share"><span class="fa fa-pinterest-p" aria-hidden="true"></span></a>
                    </div>
                </div>

                <!--//author-card-->
                <div class="mt-3">
                    <h4>Bu Turun Rehberleri</h4>
                    <div class="row align-items-center">
                        @await Component.InvokeAsync("_DestinationDetailGuideListComponentPartial", new { id = ViewBag.id })
                    </div>
                </div>

                <!--//author-card-->
                @await Component.InvokeAsync("_DestinationDetailCommentListComponentPartial", new { id = ViewBag.id })
                @{
                    if (ViewBag.user != null)
                    {
                        @await Component.InvokeAsync("_DestinationDetailMakeCommentComponentPartial", new { id = ViewBag.id })
                    }
                }

            </div>
        </div>
    </div>
    <!--//blog-post-->
</section>

<script>

    $(document).ready(function () {
        $('#summernoteRead').summernote({
            toolbar: true, // Toolbar'ı gizler
            airMode: true, // Sadece görüntüleme modu
            height: 500, // Yüksekliği içeriğe göre ayarlar
            minHeight: 500, // Minimum yüksekliği ayarlar
            maxHeight: 800, // Maksimum yüksekliği ayarlar
            focus: true // Başlangıçta odaklanır
        });
    });
</script>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container py-2">
            <h2 class="title">İletişime Geçin</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="/Default/Index">Anasayfa</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> İletişim </li>
            </ul>
        </div>
    </div>
</section>

<section class="w3l-contact" id="contact">
    <div class="contact-infubd py-5">
        <div class="container py-lg-3">
            <div class="contact-grids row">
                <div class="col-lg-6 contact-left">
                    <div class="partners">
                        <div class="cont-details">
                            <h5>İletişim Bilgileri</h5>
                            <p class="mt-3 mb-4">
                                Merhaba, Faks, e-posta veya telefonla 7/24 hizmetinizdeyiz. Bize ulaşın, böylece bu konuda daha fazla konuşabiliriz.
                            </p>
                        </div>
                        <div class="hours">
                            <h6 class="mt-4">Eposta:</h6>
                            <p>
                                <a href="mailto:info@batuhanyalin.com">
                                    info@batuhanyalin.com
                                </a>
                            </p>
                            <h6 class="mt-4">Ofisimizi Ziyaret Edin:</h6>
                            <p> Turkey</p>
                            <h6 class="mt-4">Telefon Edin:</h6>
                            <p class="margin-top"><a href="tel:+44-255-366-88">+44-255-366-88</a></p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 mt-lg-0 mt-5 contact-right">
                    <form method="post" class="signin-form">
                        <div class="input-grids">
                            <div class="form-group">
                                <input type="text" name="w3lName" id="w3lName" placeholder="Adınız" class="contact-input" />
                            </div>
                            <div class="form-group">
                                <input type="text" name="w3lName" id="w3lName" placeholder="Soyadınız" class="contact-input" />
                            </div>
                            <div class="form-group">
                                <input type="text" name="w3lName" id="w3lName" placeholder="Telefon Numaranız" class="contact-input" />
                            </div>
                            <div class="form-group">
                                <input type="email" name="w3lSender" id="w3lSender" placeholder="E-posta Adresiniz" class="contact-input" required="" />
                            </div>
                            <div class="form-group">
                                <input type="text" name="w3lSubect" id="w3lSubect" placeholder="Konu" class="contact-input" />
                            </div>
                        </div>
                        <div class="form-group">
                            <textarea name="w3lMessage" id="w3lMessage" placeholder="Mesajınız" required=""></textarea>
                        </div>
                        <div class="text-right">
                            <button class="btn btn-style btn-primary">Mesaj Gönder</button>
                        </div>
                    </form>
                </div>

            </div>
            <div class="map mt-5 pt-md-5">
                <h5>Map</h5>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d387145.86654334463!2d-74.25818682528057!3d40.70531100753592!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c24fa5d33f083b%3A0xc80b8f06e177fe62!2sNew+York%2C+NY%2C+USA!5e0!3m2!1sen!2sin!4v1493028309728"
                        style="border:0" allowfullscreen=""></iframe>
            </div>
        </div>
    </div>
</section>
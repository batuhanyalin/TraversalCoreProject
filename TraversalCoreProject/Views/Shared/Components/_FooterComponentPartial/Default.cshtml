@model FooterAuthenticationControllerModel
<footer>
    <!-- footer -->
    <section class="w3l-footer">
        <div class="w3l-footer-16-main py-5">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 column">
                        <div class="row">
                            <div class="col-md-4 column">
                                <h3>Acentamız</h3>
                                <ul class="footer-gd-16">
                                    <li><a href="/Default/Index">Anasayfa</a></li>
                                    <li><a href="/About/Index">Hakkımızda</a></li>
                                    <li><a href="/Destination/Index">Rotalar</a></li>
                                    <li><a href="/Guide/Index">Rehberler</a></li>
                                    <li><a href="/Contact/Index">Bize Yazın</a></li>
                                    <li><a href="/Application/Index">Rehber Ol</a></li>
                                </ul>
                            </div>
                            <div class="col-md-4 column mt-md-0 mt-4">
                                <h3>Faydalı Linkler</h3>
                                <ul class="footer-gd-16">
                                    <li><a href="#url">Havayolları</a></li>
                                    <li><a href="#url">Hastaneler</a></li>
                                    <li><a href="#url">Döviz Ofisleri</a></li>
                                    <li><a href="about.html">Turizm Bürosu</a></li>
                                </ul>
                            </div>
                            <div class="col-md-4 column mt-md-0 mt-4">
                                <h3>Hizmetlerimiz</h3>
                                <ul class="footer-gd-16">
                                    <li><a href="#url">Servisler</a></li>
                                    <li><a href="#url">Ring Seferler</a></li>
                                    <li><a href="services.html">Hizmet Şartları</a></li>
                                    @{
                                        if (Model.IdentityName != null)
                                        {
                                            if (Model.Role=="Admin")
                                            {
                                                <li><a href="/Admin/Profile/Index">Profilim</a></li>
                                            }
                                            else
                                            {
                                                <li><a href="/Member/Profile/Index">Profilim</a></li>
                                            }                                          
                                            <li><a href="/Login/LogOut">Çıkış Yap</a></li>
                                        }
                                        else
                                        {
                                            <li><a href="/Register/Index">Kayıt Ol</a></li>
                                            <li><a href="/Login/Index">Giriş Yap</a></li>
                                        }
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-12 column pl-lg-5 column4 mt-lg-0 mt-5">
                        <h3>E-posta Bültenine Kayıt Olun </h3>
                        <div class="end-column">
                            <h4>En son güncellemeleri ve teklifleri alın.</h4>
                            <form action="#" class="subscribe" method="post">
                                <input type="email" name="email" placeholder="E-posta Adresiniz" required="">
                                <button type="submit">Abone Ol</button>
                            </form>
                            <p>En son haberlerimiz ve makalelerimiz için kaydolun. Size spam mailleri göndermeyeceğiz.</p>
                        </div>
                    </div>
                </div>
                <div class="d-flex below-section justify-content-between align-items-center pt-4 mt-5">
                    <div class="columns text-lg-left text-center">
                        <p>
                            &copy; @DateTime.Now.Year Traversal. Tüm Hakları Saklıdır.<a title="Proje kodlarına gitmek için" href="https://www.github.com/batuhanyalin/TraversalCoreProject" target="_blank">
                                Batuhan YALIN
                            </a> tarafından yapılmıştır.
                        </p>
                    </div>
                    @await Component.InvokeAsync("_FooterSocialMediaComponentPartial")
                </div>
            </div>
        </div>

        <!-- move top -->
        <button onclick="topFunction()" id="movetop" title="Go to top">
            <span class="fa fa-angle-up"></span>
        </button>
        <script>
            // When the user scrolls down 20px from the top of the document, show the button
            window.onscroll = function () {
                scrollFunction()
            };

            function scrollFunction() {
                if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                    document.getElementById("movetop").style.display = "block";
                } else {
                    document.getElementById("movetop").style.display = "none";
                }
            }

            // When the user clicks on the button, scroll to the top of the document
            function topFunction() {
                document.body.scrollTop = 0;
                document.documentElement.scrollTop = 0;
            }
        </script>
        <!-- //move top -->
        <script>
            $(function () {
                $('.navbar-toggler').click(function () {
                    $('body').toggleClass('noscroll');
                })
            });
        </script>
    </section>
    <!-- //footer -->
</footer>

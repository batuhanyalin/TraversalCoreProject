@model List<CommentListDto>
<div class="comments mt-5">
    <h4 class="side-title ">Yorum (@Model.Count())</h4>
    @foreach (var item in Model)
    {
          <div class="media mt-4">
        <div class="img-circle">
            <img src="@item.Member.ImageUrl" class="img-fluid" alt="...">
        </div>
        <div class="media-body">
            <ul class="time-rply mb-2">
                <li>
                    <a href="#URL" class="name mt-0 mb-2 d-block">@item.Member.Name @item.Member.Surname</a>
                    @item.CommentDate.ToString("MMMM dd,yyy - HH:mm")
                </li>
            </ul>
            <p>
                @item.Text
            </p>
        </div>
    </div>  
    }
</div>
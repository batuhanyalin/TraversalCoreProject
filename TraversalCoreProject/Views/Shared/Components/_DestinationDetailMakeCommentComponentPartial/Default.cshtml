@model CommentCreateDto
<div class="leave-comment-form mt-5" id="reply">
    <h4 class="side-title mb-2">Bir Yorum Yap</h4>
    <p class="mb-4">
        E-posta adresiniz paylaşılmayacaktır.
    </p>
    <form asp-controller="Comment" asp-action="Index" method="post">
        <div class="form-group">
            <input type="hidden" asp-for="DestinationId" />
            <textarea asp-for=Text class="form-control" placeholder="Yorumunuz" required=""
                      spellcheck="false"></textarea>
        </div>
        <div class="submit text-right">
            <button class="btn btn-style btn-primary">Yorum Yap </button>
        </div>
    </form>
</div>
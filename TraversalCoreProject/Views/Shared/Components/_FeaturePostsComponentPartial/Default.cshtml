@model List<FeaturePostListDto>
@{
    int count = 0;
}
<section class="w3l-grids-3 py-1">
    <div class="container py-md-3">
        <div class="title-content text-left mb-lg-5 mb-0">
            <h6 class="sub-title">Editörün Seçtiği</h6>
            <h3 class="hny-title">Tur Rotaları</h3>
        </div>
    </div>
</section>
 <div class="best-rooms py-5">
    <div class="container py-md-5">
        <div class="ban-content-inf row">
            <div class="maghny-gd-1 col-lg-6">
                <div class="maghny-grid">
                    <a href="/Destination/DestinationDetail/@ViewBag.fpDestinationId">
                        <figure class="effect-lily border-radius  m-0">
                            <img class="img-fluid" src="@ViewBag.fpImageUrl" alt="" />
                            <figcaption>
                                <div>
                                    <h4>@ViewBag.fpCountry - @ViewBag.fpCity | @ViewBag.fpDayNight</h4>
                                    <p>Fiyat @ViewBag.fpPrice </p>
                                    <p>@ViewBag.fpDescription</p>
                                </div>
                            </figcaption>
                        </figure>
                    </a>
                </div>
            </div>
            <div class="maghny-gd-1 col-lg-6 mt-lg-0 mt-4">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        count++;
                        if (count < 5)
                        {
                            <div class="maghny-gd-1 col-6 mt-4">
                                <div class="maghny-grid">
                                    <a href="/Destination/DestinationDetail/@item.DestinationId">
                                        <figure class="effect-lily border-radius">
                                            <img class="img-fluid" src="@item.ImageUrl" alt="" />
                                            <figcaption>
                                                <div>
                                                    <h4>@item.DayNight </h4>
                                                    <p>Fiyat @item.Price </p>
                                                </div>
                                            </figcaption>
                                        </figure>
                                    </a>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>